# Configuration de production
APP_NAME="One HCM SEEG Backend"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Base de données PostgreSQL Azure
DATABASE_URL=postgresql+asyncpg://Sevan:Azure%40Seeg@seegrecruiter.postgres.database.azure.com:5432/postgres
DATABASE_URL_SYNC=postgresql://Sevan:Azure%40Seeg@seegrecruiter.postgres.database.azure.com:5432/postgres

# Configuration de sécurité - À CHANGER EN PRODUCTION
SECRET_KEY=CHANGE-THIS-SECRET-KEY-IN-PRODUCTION-USE-A-STRONG-RANDOM-KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configuration CORS pour la production
ALLOWED_ORIGINS=["https://www.seeg-talentsource.com", "https://seeg-talentsource.com"]
ALLOWED_CREDENTIALS=true

# Configuration email - À CONFIGURER AVEC VOS PARAMÈTRES
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false
MAIL_FROM_NAME="One HCM - SEEG"
MAIL_FROM_EMAIL=noreply@seeg.ga

# Configuration Redis (pour Celery) - À CONFIGURER
REDIS_URL=redis://your-redis-server:6379/0
CELERY_BROKER_URL=redis://your-redis-server:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-server:6379/0

# Configuration de monitoring
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# Configuration de stockage de fichiers
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["pdf", "doc", "docx", "jpg", "jpeg", "png"]

# Configuration Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=documents

# Configuration de rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Configuration de maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Le système est en maintenance. Veuillez réessayer plus tard."
