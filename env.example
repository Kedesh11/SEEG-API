# Configuration de base
APP_NAME="One HCM SEEG Backend"
APP_VERSION="1.0.0"

# ============================================================================
# ENVIRONNEMENT : Choisir entre "development" ou "production"
# ============================================================================
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# BASE DE DONN√âES
# ============================================================================
# üîπ D√âVELOPPEMENT LOCAL (d√©commentez pour utiliser)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/seeg_db
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/seeg_db

# üîπ PRODUCTION AZURE (d√©commentez pour utiliser)
# DATABASE_URL=postgresql+asyncpg://Sevan:Sevan%40Seeg@seeg-postgres-server.postgres.database.azure.com:5432/postgres
# DATABASE_URL_SYNC=postgresql://Sevan:Sevan%40Seeg@seeg-postgres-server.postgres.database.azure.com:5432/postgres

# ============================================================================
# REDIS (Cache et Rate Limiting)
# ============================================================================
# üîπ LOCAL
REDIS_URL=redis://localhost:6379/0

# üîπ AZURE (d√©commentez pour production)
# REDIS_URL=redis://:YOUR_REDIS_PASSWORD@your-redis.redis.cache.windows.net:6380/0?ssl=True

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# S√âCURIT√â
# ============================================================================
# ‚ö†Ô∏è IMPORTANT : Changez cette cl√© en production (minimum 32 caract√®res)
SECRET_KEY=CHANGE_ME_SECRET_KEY_32CHARS_MINIMUM_1234567890_DEV_ONLY
ALGORITHM=HS256
JWT_ISSUER=seeg-api
JWT_AUDIENCE=seeg-clients
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS
# ============================================================================
# üîπ D√âVELOPPEMENT
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
ALLOWED_CREDENTIALS=true

# üîπ PRODUCTION (ajoutez vos domaines)
# ALLOWED_ORIGINS=https://www.seeg-talentsource.com,https://seeg-hcm.vercel.app,https://seeg-backend-api.azurewebsites.net

# ============================================================================
# EMAIL (SMTP Configuration)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_SSL=false
SMTP_USERNAME=smtp_user@domain.tld
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD
MAIL_FROM_EMAIL=support@seeg-talentsource.com
MAIL_FROM_NAME="One HCM - SEEG Talent Source"

# URL de l'application frontend
PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# MONITORING
# ============================================================================
# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Tracing (OpenTelemetry)
ENABLE_TRACING=true
CONSOLE_EXPORT=true
JAEGER_ENDPOINT=
OTLP_ENDPOINT=
TRACING_SAMPLE_RATE=1.0

# M√©triques (Prometheus)
METRICS_ENABLED=true

# Application Insights (Azure - optionnel)
# Obtenez votre connection string depuis le portail Azure
APPLICATIONINSIGHTS_CONNECTION_STRING=

# ============================================================================
# WORKERS ET PERFORMANCE
# ============================================================================
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT_KEEP_ALIVE=5
TIMEOUT_GRACEFUL_SHUTDOWN=30
WEBSITES_PORT=8000

# ============================================================================
# RATE LIMITING
# ============================================================================
# Format : nombre/p√©riode (ex: 100/minute, 500/hour)
RATE_LIMIT_DEFAULT=60/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_SIGNUP=3/minute
RATE_LIMIT_UPLOAD=10/minute

# ============================================================================
# WEBHOOKS (optionnel)
# ============================================================================
WEBHOOK_SECRET=
AZ_FUNC_ON_APP_SUBMITTED_URL=
AZ_FUNC_ON_APP_SUBMITTED_KEY=